{
  "extends": "bitcrowd-base",
  "root": true,
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "h" }]
  },
  "env": {
    "browser": true
  },
  "globals": {
    "PIXI": true,
    "h": true
  }
}
